{
  "manifest_version": 3,
  "name": "News Credibility Estimator",
  "version": "1.0",
  "description": "Detect the credibility of text using an AI-powered API",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:5001/"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "News Credibility Estimator"
  },
  "externally_connectable": {
    "matches": ["http://localhost:5001/*"]
  }
}
